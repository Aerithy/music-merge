<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_tab_bar"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_playlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/playbar_btn_playlist"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Songname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:drawablePadding="3dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="Name:"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_singer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:drawablePadding="3dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="singer:"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/playbar_btn_playlist"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/playbar_btn_play"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/playbar_btn_next"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>